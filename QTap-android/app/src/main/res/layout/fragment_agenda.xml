<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.qtapandroid.ui.fragments.AgendaFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <!-- this first section of the listview removes the tap animation from the list, so that it does not appear selectable to the user-->
        <ListView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:listSelector="@android:color/transparent"


            android:id="@+id/agendaList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false" />

        <Button
            android:id="@+id/nextDay"
            android:text="Next Day"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</FrameLayout>
